# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
indent_size = 4
space_before_function_paren = true

[*.{html,xml}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.{md}]
indent_size = 2

[*.{json}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
